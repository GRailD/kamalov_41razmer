<Page x:Class="kamalov_41razmer.Authxaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kamalov_41razmer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authxaml">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Логин" Margin="0 0 10 0"></TextBlock>
                <TextBox Name="Login" Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                <TextBlock Text="Пароль" Margin="0 0 2.5 0"></TextBlock>
                <TextBox Name="Password" Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 30 0 0">
                <Button x:Name="SignGhost" Click="SignGhost_Click"  Content="Войти как гость" Width="160" Height="40" Margin="0 0 100 0"/>
                <Button x:Name="Sign" Click="Sign_Click" Content="Войти" Width="120" Height="40"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
